<Window x:Class="Maze_1._0.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Maze_1._0"
        mc:Ignorable="d"        
        Title="MainWindow" Width="650" Height="800" MinWidth="650" MinHeight="600" 
        FontFamily="Segue UI Light" FontSize="16" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black"/>
                <GradientStop Color="White" Offset="1"/>
                <GradientStop Color="#FF7AA0A1" Offset="0.8"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>       
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="leftSide" Width="*"/>
                <ColumnDefinition x:Name="gameSide" Width="Auto"/>
                <ColumnDefinition x:Name="rightSide" Width="*"/>
            </Grid.ColumnDefinitions>            
            <WrapPanel Orientation="Vertical" Grid.Row="0" Grid.Column="2"
                       HorizontalAlignment="Right">
                <Label x:Name="_score" Content="Score: 000" Margin="10" 
                       FontStyle="Italic" Background="DarkGoldenrod"/>
                <Button x:Name="btnStart" Content="Start" Margin="10"  Click="btnStart_Click"/>
                <Button x:Name="btnHelp" Content="Solve" Margin="10" Click="btnHelp_Click"/>
                <Button x:Name="btnEXit" Content="Exit" Margin=" 10" Click="btnEXit_Click"/>               
            </WrapPanel>
            <Viewbox Grid.Column="1" Grid.Row="0" Margin="0,0,0,20">
            <Border BorderBrush="DarkGray" Background="DimGray" BorderThickness="4">
                <Canvas x:Name="drawingCanvas" 
                        Background="Silver" Margin="10" 
                        MinHeight="600" MinWidth="330"
                        Loaded="drawingCanvas_Loaded" ClipToBounds="True">
                    <Label Content="Start" HorizontalAlignment="Center" Canvas.Top="1"/>
                    <Label Content="Finsh" VerticalAlignment="Center" Canvas.Bottom="1"/>
                </Canvas>
            </Border>                
            </Viewbox>
        <StatusBar  x:Name="stBar" Grid.Row="1" Grid.ColumnSpan="3"  BorderThickness="2" VerticalAlignment="Bottom">
            <Label Content="Ready"/>
        </StatusBar>
                
    </Grid>  
</Window>
