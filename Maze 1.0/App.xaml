<Application x:Class="Maze_1._0.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Maze_1._0"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <Style x:Key="mazeButtons">
                <Setter Property = "Control.Height" Value="40"/>
                <Setter Property = "Control.Width" Value="90"/>
                <Setter Property = "Control.BorderBrush" Value= "Brown"/>
                <Setter Property = "Control.BorderThickness" Value="2"/>
                <Setter Property = "Control.Margin" Value="8"/>
                <Setter Property = "ItemsControl.FontSize" Value="18"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
